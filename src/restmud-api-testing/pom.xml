<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>uk.co.compendiumdev.restmud</groupId>
        <artifactId>restmud-root</artifactId>
        <version>1.1.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <groupId>uk.co.compendiumdev.restmud.testing</groupId>
    <artifactId>restmud-api-testing</artifactId>
    <version>1.0.0</version>


    <dependencies>
        <dependency>
            <groupId>uk.co.compendiumdev.restmud.engine</groupId>
            <artifactId>restmud-web</artifactId>
            <version>${restmud-web-engine.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>uk.co.compendiumdev.restmud.testing</groupId>
            <artifactId>restmud-test-starter</artifactId>
            <version>${restmud-test-spark-starter.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.jsoup</groupId>
            <artifactId>jsoup</artifactId>
            <version>${jsoup.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <!-- https://github.com/google/gson -->
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>${gson.version}</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${java.jvm.version}</source>
                    <target>${java.jvm.version}</target>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <id>copy-resources</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/src/test/resources/games</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/../tech-web-test-restmud-game/src/main/resources/games</directory>
                                    <includes>
                                        <include>techWebTest101Game.json</include>
                                    </includes>
                                </resource>
                                <resource>
                                    <directory>${basedir}/../basictestgame/src/main/resources/games</directory>
                                    <includes>
                                        <include>basicTestGame.json</include>
                                    </includes>
                                </resource>
                                <resource>
                                    <directory>${basedir}/../examplerestmudgame/src/main/resources/games</directory>
                                    <includes>
                                        <include>exampleDocumentedGame.json</include>
                                    </includes>
                                </resource>
                                <resource>
                                    <directory>${basedir}/../treasurehuntgame/src/main/resources/games</directory>
                                    <includes>
                                        <include>treasureHunterGame.json</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>